<Window x:Class="WpfGetFilesDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGetFilesDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnOpenDirectory" Content="Open Directory" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="104" Click="btnOpenDirectory_Click"/>
        <Label Content="Dir:" HorizontalAlignment="Left" Margin="119,7,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPath" Content="Path" HorizontalAlignment="Left" Margin="152,7,0,0" VerticalAlignment="Top"/>
        <Label Content="Files:" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lstFiles" Margin="14,90,10,19"/>

    </Grid>
</Window>
