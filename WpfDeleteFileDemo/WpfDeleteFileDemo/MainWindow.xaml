<Window x:Class="WpfDeleteFileDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDeleteFileDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnSelectFile" Content="Select File" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="btnSelectFile_Click"/>
        <Label Content="File:" HorizontalAlignment="Left" Margin="90,7,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblFile" Content="Path + File" HorizontalAlignment="Left" Margin="126,7,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.658,-0.705"/>
        <Button x:Name="btnDelete" Content="Delete File" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top" Width="75" Click="btnDelete_Click"/>

    </Grid>
</Window>
